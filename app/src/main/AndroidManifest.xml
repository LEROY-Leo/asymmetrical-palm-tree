<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.applicationleroyleo">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_eseo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_eseo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ApplicationLEROYLeo">
        <activity android:name="com.example.applicationleroyleo.ui.localisation.LocalisationActivity"></activity>
        <activity android:name="com.example.applicationleroyleo.ui.settings.SettingsActivity" />
        <activity android:name="com.example.applicationleroyleo.ui.historic.HistoricActivity" />
        <activity
            android:name="com.example.applicationleroyleo.ui.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.applicationleroyleo.ui.home.HomeActivity" />
    </application>

</manifest>